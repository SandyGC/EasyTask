<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easytask.controller.ControllerInfoListTaskFragment"
    android:background="@drawable/fondoinicioapp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/gradien_shadow"
            android:id="@+id/linearLayout1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:background="@color/shadow">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/infoUserListTask"
                    android:text="grupo o user"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/gradien_shadow"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/selector_list_task_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/info_tittle_ListTask"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="Titulo"
                        android:textSize="18dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/info_statusList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estado" />

                    <TextView
                        android:id="@+id/info_date_ListTask"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="fecha" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/linearLayout3">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="28dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:background="@color/shadow">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/info"
                    android:text="@string/puedenVer"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InfoListViewListTask"
            android:layout_below="@+id/linearLayout3"
            android:layout_margin="5dp"
            android:background="@color/shadow"
            android:divider="@android:color/transparent"/>


    </RelativeLayout>

</FrameLayout>
